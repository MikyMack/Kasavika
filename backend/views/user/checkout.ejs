                        <option value="Work">Work</option>
                        <option value="Other">Other</option>
                      </select>
                    </fieldset>

                    <fieldset class="box fieldset">
                      <label class="checkbox">
                        <input type="checkbox" id="isDefault" /> Set as default
                      </label>
                    </fieldset>

                    <button
                      type="button"
                      id="save-address"
                      class="btn btn-primary w-100"
                    >
                      Save Address
                    </button>
                  </div>
                </form>
