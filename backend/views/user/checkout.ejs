                <form id="checkout-form">
                  <!-- ADDRESS LIST -->
                  <div id="address-list" class="address-list">
                    <% if (addresses && addresses.length > 0) { %> <%
                    addresses.forEach(addr => { %>

                    <div
                      class="address-card <%= addr.isDefault ? 'selected' : '' %>"
                      data-id="<%= addr._id %>"
                    >
                      <div class="address-main">
                        <div class="address-header">
                          <strong class="address-name"><%= addr.name %></strong>
                          <span class="address-phone"
                            >ðŸ“ž <%= addr.phone %></span
                          >
                        </div>

                        <div class="address-body">
                          <%= addr.addressLine1 %>, <%= addr.district %><br />
                          <%= addr.city %>, <%= addr.state %> - <%= addr.pincode
                          %><br />
                          <small><%= addr.addressType %></small>
                        </div>

                        <% if (addr.isDefault) { %>
                        <span class="default-badge">Default</span>
                        <% } %>
                      </div>

                      <div class="address-actions">
                        <button
                          type="button"
                          class="edit-btn"
                          data-id="<%= addr._id %>"
                        >
                          Edit
                        </button>
                        <button
                          type="button"
                          class="delete-btn"
                          data-id="<%= addr._id %>"
                        >
                          Delete
                        </button>
                      </div>

                      <div class="radio-indicator"></div>
                    </div>

                    <% }) %> <% } else { %>
                    <p class="no-address">No saved addresses found.</p>
                    <% } %>

                    <button
                      type="button"
                      id="add-new-btn"
                      class="add-new-address-btn"
                    >
                      + Add New Address
                    </button>
                  </div>

                  <!-- NEW / EDIT ADDRESS FORM -->
