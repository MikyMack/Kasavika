    <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("new-address-fields");
      const addBtn = document.getElementById("add-new-btn");
      const saveBtn = document.getElementById("save-address");

      const fields = {
        id: document.getElementById("address-id"),
        name: document.getElementById("name"),
        phone: document.getElementById("phone"),
        pincode: document.getElementById("pincode"),
        state: document.getElementById("state"),
        city: document.getElementById("city"),
        district: document.getElementById("district"),
        addressLine1: document.getElementById("addressLine1"),
        addressLine2: document.getElementById("addressLine2"),
        landmark: document.getElementById("landmark"),
        addressType: document.getElementById("addressType"),
        isDefault: document.getElementById("isDefault")
      };

      // OPEN FORM FOR ADD
      addBtn.addEventListener("click", () => {
        document.getElementById("form-title").textContent = "Add New Address";
        fields.id.value = ""; // reset id
        form.classList.remove("hidden");
        form.scrollIntoView({ behavior: "smooth" });
      });

      // SAVE (ADD / EDIT)
      saveBtn.addEventListener("click", async () => {
        const payload = {
          name: fields.name.value,
          phone: fields.phone.value,
          pincode: fields.pincode.value,
          state: fields.state.value,
          city: fields.city.value,
          district: fields.district.value,
          addressLine1: fields.addressLine1.value,
          addressLine2: fields.addressLine2.value,
          landmark: fields.landmark.value,
          addressType: fields.addressType.value,
          isDefault: fields.isDefault.checked
        };

        const id = fields.id.value;
        const url = id
          ? `/edit-address/${id}`
          : `/create-address`;

        const method = id ? "PUT" : "POST";

        const res = await fetch(url, {
          method,
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });

        const data = await res.json();

        if (!data.success && res.status >= 400) {
          alert(data.message || "Error saving address");
          return;
        }

        location.reload(); // reload address list
      });

      // DELETE
      document.addEventListener("click", async e => {
        if (e.target.classList.contains("delete-btn")) {
          const id = e.target.dataset.id;
          if (!confirm("Delete this address?")) return;

          await fetch(`/delete-address/${id}`, { method: "DELETE" });
          location.reload();
        }
      });

      // EDIT â€“ PREFILL FORM
      document.addEventListener("click", async e => {
        if (e.target.classList.contains("edit-btn")) {
          const id = e.target.dataset.id;

          const res = await fetch(`/address/${id}`);
          const addr = await res.json();

          fields.id.value = addr._id;
          fields.name.value = addr.name;
          fields.phone.value = addr.phone;
          fields.pincode.value = addr.pincode;
          fields.state.value = addr.state;
          fields.city.value = addr.city;
          fields.district.value = addr.district;
          fields.addressLine1.value = addr.addressLine1;
          fields.addressLine2.value = addr.addressLine2;
          fields.landmark.value = addr.landmark;
          fields.addressType.value = addr.addressType;
          fields.isDefault.checked = addr.isDefault;

          document.getElementById("form-title").textContent = "Edit Address";
          form.classList.remove("hidden");
          form.scrollIntoView({ behavior: "smooth" });
        }
      });

      // SELECT/HIGHLIGHT ADDRESS
      document.querySelectorAll(".address-card").forEach(card => {
        card.addEventListener("click", async () => {
          const id = card.dataset.id;

          await fetch(`/edit-address/${id}`, {
            method: "PUT",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ isDefault: true })
          });

          location.reload();
        });
      });
    });
    </script>


